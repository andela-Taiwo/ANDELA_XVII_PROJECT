                </li>
              </ul>
          </nav>
          <div class=" page-title">
            <h3 class="text-muted logo">Andela Notice Board</h3>
          </div>
        </div>



    

      
        <div class="mainBg">
            <h3>Welcome to General Notice Board</h3>
          <form action="/users/home" method="POST" onsubmit="return checkForm(this);" >
            <label>Name:</label> <br>
            <input type="text" placeholder="" name="name" value="<%=user.username%>" id="input_text"><br>
            <label>Category:</label><br>
            <select name="dropdown" id="input_text">
              <option value="general" selected>General</option>
              <option value="fellow">Fellow</option>
              <option value="staff">Staff</option>
            </select><br>

            <label>Title:</label> <br>
            <input type="text" placeholder="Title" name="title" required id="input_text"><br>
            <label>Message:</label> <br>
             <textarea cols="17" rows="12" placeholder="Message" name="message" required id="input_text"></textarea><br>

            <label>Due Date:</label>  <br>
             <input type="text" name="startdate" placeholder="mm/dd/yyyy" required pattern="\d{1,2}/\d{1,2}/\d{4}" id="input_text"><br>
            <label>Priority:</label><br>

            <select name="priority" id="input_text" pattern="\d{1}">
              <option value="1" selected>1</option>
              <option value="2">2</option>
              <option value="3">3</option>
            </select><br>

            
            <button type="submit" id="join">Post</button>
          </form>
        </div>

    </div>
      
